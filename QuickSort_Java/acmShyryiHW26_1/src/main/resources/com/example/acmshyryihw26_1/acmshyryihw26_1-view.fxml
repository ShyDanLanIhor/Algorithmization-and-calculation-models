<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<VBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.acmshyryihw26_1.ShyryiController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <TextArea fx:id="inputTextArea" wrapText="true" prefHeight="75"
              promptText="Введіть сюди числа для сортування"/>
    <VBox alignment="CENTER">
        <Button text="Посортувати" onAction="#onInvestigateButtonClick"/>
    </VBox>
    <TextArea fx:id="outputTextArea" wrapText="true" prefHeight="75"
              promptText="Тут будуть виведені посортовані числа"/>
</VBox>
